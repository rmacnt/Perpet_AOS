<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_bottom">

    <fragment
        android:id="@+id/bottom_info_fragment"
        android:name="pet.perpet.equal.presentation.more.fragment.BottomInfoFragment">

        <argument
            android:name="type"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/bottom_allergy_search_fragment"
        android:name="pet.perpet.equal.presentation.sign.fragment.BottomAllergySearchFragment">

        <argument
            android:name="item"
            android:defaultValue="@null"
            app:argType="pet.perpet.domain.model.profile.Allergy[]"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/bottom_comment_fragment"
        android:name="pet.perpet.equal.presentation.examination.fragment.BottomCommentFragment">

        <argument
            android:name="name"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>


    <fragment
        android:id="@+id/bottom_disease_search_fragment"
        android:name="pet.perpet.equal.presentation.sign.fragment.BottomDiseaseSearchFragment">

        <argument
            android:name="item"
            android:defaultValue="@null"
            app:argType="pet.perpet.domain.model.profile.Disease[]"
            app:nullable="true" />


        <argument
            android:name="diseaseId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/bottom_alarm_fragment"
        android:name="pet.perpet.equal.presentation.intakecheck.fragment.BottomAlarmFragment">

        <argument
            android:name="item"
            android:defaultValue="@null"
            app:argType="pet.perpet.equal.presentation.intakecheck.model.IntakeAlarm"
            app:nullable="true" />

    </fragment>



</navigation>