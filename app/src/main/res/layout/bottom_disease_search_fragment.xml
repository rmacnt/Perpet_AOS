<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="pet.perpet.equal.presentation.sign.viewmodel.BottomDiseaseSearchViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_bottom_alert_bg"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{model::onNegativeClick}"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/ic_bottom_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <pet.perpet.framework.widget.BaseEditText
                android:id="@+id/ev_search"
                setTextChangedListener="@{model::onDiseaseTextChange}"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/base_bottom_line_bg"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/search_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint_color"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_close"
                tools:ignore="DuplicateClickableBoundsCheck" />


            <pet.perpet.framework.widget.recyclerview.BaseRecyclerView
                android:id="@+id/recyclerview"
                recyclerview.layoutMediator="@{model.typeMediator}"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:visibility="@{model.typeMediator.adapter.itemCount > 0 ? View.VISIBLE : View.GONE }"
                app:layout_constraintTop_toBottomOf="@id/ev_search" />


            <pet.perpet.framework.widget.recyclerview.BaseRecyclerView
                android:id="@+id/recyclerview_result"
                recyclerview.layoutMediator="@{model.typeResultMediator}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/recyclerview" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/black_radius_8"
                android:fontFamily="@font/gmarket_sans_medium"
                android:onClick="@{model::onClick}"
                android:text="@string/subscribe_comment31"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerview_result" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>