<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="pet.perpet.equal.presentation.search.viewmodel.SearchSupplementDetailViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarket_sans_medium"
                        android:text="@string/subscribe_comment21"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{model::onHomeClick}"
                        android:src="@drawable/ic_close"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/appbar" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line">

                    <pet.perpet.equal.presentation.base.widget.BaseSimpleDraweeView
                        android:id="@+id/iv_supple"
                        setSupportImageUrl="@{model.image}"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        app:failureImage="@drawable/supple_sample"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:roundAsCircle="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_supple_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/gmarket_sans_bold"
                        android:text="@{model.name}"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toEndOf="@id/iv_supple"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="알로에 베라" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/gmarket_sans_medium"
                        android:lineSpacingExtra="4dp"
                        android:text="@{model.summary}"
                        android:textColor="@color/text_hint_color"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_supple"
                        app:layout_constraintTop_toBottomOf="@id/tv_supple_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/cl_info" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:paddingBottom="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_comment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarket_sans_bold"
                        android:text="@string/examination_comment17"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/gmarket_sans_medium"
                        android:lineSpacingExtra="4dp"
                        android:text="@{model.description}"
                        android:textColor="@color/text_hint_color"
                        android:textSize="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_comment_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/cl_comment" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_info1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line_2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarket_sans_bold"
                        android:text="@string/subscribe_comment24"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gmarket_sans_medium"
                        android:onClick="@{model::onCodeDetailClick}"
                        android:text="@string/detail_1"
                        android:textColor="@color/text_hint_color"
                        android:textSize="13dp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_info_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gmarket_sans_medium"
                    android:text="@string/examination_comment19"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_info1" />

                <pet.perpet.framework.widget.recyclerview.BaseRecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_info_1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_supplement_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gmarket_sans_medium"
                    android:text="@string/examination_comment30"
                    android:textColor="@color/text_hint_color"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerview" />

                <View
                    android:id="@+id/line_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/line_color_ddd"
                    android:visibility="@{model.omega ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/tv_supplement_comment" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_supplement_comment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gmarket_sans_bold"
                    android:text="@string/examination_comment21"
                    android:textColor="#6EC898"
                    android:textSize="15dp"
                    android:visibility="@{model.omega ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_supplement_comment_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gmarket_sans_medium"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/examination_comment22"
                    android:textColor="@color/text_hint_color"
                    android:textSize="15dp"
                    android:visibility="@{model.omega ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_supplement_comment_1" />

                <View
                    android:id="@+id/line_4"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_supplement_comment_2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line_4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/gmarket_sans_bold"
                        android:text="@string/examination_comment25"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:onClick="@{model::onCautionClick}"
                        android:src="@{model.cautionAsk ? @drawable/ic_policy_up_arrow : @drawable/ic_policy_down_arrow}"
                        app:layout_constraintBottom_toBottomOf="@id/tv_info"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_info" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_info_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gmarket_sans_medium"
                    android:lineSpacingExtra="4dp"
                    android:text="@{model.caution}"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp"
                    android:visibility="@{model.cautionAsk ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_info_1" />


                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_info_2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingBottom="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_info_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/gmarket_sans_bold"
                        android:text="@string/examination_comment26"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:onClick="@{model::onStoragePrecautionsClick}"
                        android:src="@{model.storagePrecautionsAsk ? @drawable/ic_policy_up_arrow : @drawable/ic_policy_down_arrow}"
                        app:layout_constraintBottom_toBottomOf="@id/tv_info_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_info_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_info_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gmarket_sans_medium"
                    android:lineSpacingExtra="4dp"
                    android:text="@{model.storagePrecautions}"
                    android:textColor="#aaaaaa"
                    android:textSize="15dp"
                    android:visibility="@{model.storagePrecautionsAsk ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_info_2" />


                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_info_4" />

                <pet.perpet.framework.widget.recyclerview.BaseRecyclerView
                    android:id="@+id/recyclerview_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@id/line5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/line_color"
                    app:layout_constraintTop_toBottomOf="@id/recyclerview_tag" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>