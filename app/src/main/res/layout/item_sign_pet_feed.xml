<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="pet.perpet.equal.presentation.sign.viewmodel.PetFeedViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_living2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:background="@{model.error ? @color/line_color_error : @color/white}"
                android:visibility="@{model.error ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_feed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/gmarket_sans_bold"
                android:paddingTop="24dp"
                android:text="@{model.title}"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/gmarket_sans_bold"
                android:text="@string/sign_comment_125"
                android:textSize="13dp"
                android:textColor="@{model.error ? @color/line_color_error : @color/white}"
                android:visibility="@{model.error ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_asked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/gmarket_sans_bold"
                android:onClick="@{model::onFeedAskClick}"
                android:paddingTop="16dp"
                android:text="@{model.viewAsk}"
                android:textColor="@color/text_asked_green"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:text="@string/sign_comment_110"
                android:textColor="@color/text_hint_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="13dp"
                android:visibility="@{model.petFeedAsk ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_asked"
                tools:ignore="DuplicateClickableBoundsCheck" />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:visibility="@{model.petVisibleOne ? View.VISIBLE : View.GONE}"
                android:background="@{model.petFeedAmountCode == 0 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 0 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_82"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tag="0"
                android:textColor="@{model.petFeedAmountCode == 0 ? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_comment" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="@{model.petVisibleTwo ? View.VISIBLE : View.GONE}"
                android:background="@{model.petFeedAmountCode == 1 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 1 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_83"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tag="1"
                android:textColor="@{model.petFeedAmountCode == 1? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:visibility="@{model.petVisibleThree ? View.VISIBLE : View.GONE}"
                android:background="@{model.petFeedAmountCode == 2 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 2 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_84"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tag="2"
                android:textColor="@{model.petFeedAmountCode == 2? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@{model.petFeedAmountCode == 3 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 3 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_85"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:visibility="@{model.petVisibleFour ? View.VISIBLE : View.GONE}"
                android:paddingBottom="16dp"
                android:tag="3"
                android:textColor="@{model.petFeedAmountCode == 3? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:visibility="@{model.petVisibleFive ? View.VISIBLE : View.GONE}"
                android:layout_marginEnd="24dp"
                android:background="@{model.petFeedAmountCode == 4 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 4 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_86"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tag="4"
                android:textColor="@{model.petFeedAmountCode == 4? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feed_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:visibility="@{model.petVisibleSix ? View.VISIBLE : View.GONE}"
                android:layout_marginEnd="24dp"
                android:background="@{model.petFeedAmountCode == 5 ? @drawable/base_bottom_black_line_bg : @drawable/base_bottom_line_bg}"
                android:drawableRight="@{model.petFeedAmountCode == 5 ? @drawable/ic_check_ok : null}"
                android:drawablePadding="8dp"
                android:fontFamily="@font/gmarket_sans_medium"
                android:hint="@string/sign_comment_87"
                android:onClick="@{model::onFeedClick}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tag="5"
                android:textColor="@{model.petFeedAmountCode == 5? @color/black : @color/text_hint_color}"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_5" />


            <pet.perpet.framework.widget.CheckedAppCompatButton
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feed_6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/line_color"
            app:layout_constraintTop_toBottomOf="@id/cl_living2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>