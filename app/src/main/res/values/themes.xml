<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Perpet_AOS" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme.Trans" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="behavior_draggable">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="AlertDialogTheme" parent="android:Theme.Dialog">
        <item name="android:textSize">15dp</item>
    </style>


    <style name="DialogTheme.Trans.NotDragging" parent="Theme.Design.BottomSheetDialog">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <!--AppTabLayout-->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMinWidth">30dip</item>
        <item name="tabIndicatorColor">@drawable/text_color_heading</item>
        <item name="tabIndicatorHeight">2dip</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/white</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextStyle</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">#cccccc</item>
    </style>

    <style name="AppTabTextStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="AppTheme.OrderApp" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="titleTextStyle">@style/AppText</item>
        <item name="android:icon">@drawable/ic_back</item>
    </style>

    <style name="AppText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <declare-styleable name="TextWheelPickerView">
        <attr name="highlighting_visible" format="boolean" />
    </declare-styleable>


    <style name="AppTheme.Translucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppToolbarThemeWrapper" parent="Theme.Perpet_AOS">
        <item name="android:textSize">18dp</item>
        <!--SHW-M480W 갤탭10에서는 colorControlHighlight 색상이 AppActionButtonOverflowIcon 색상이 된다.-->
        <!--        <item name="colorControlNormal">@color/text_color_secondary</item>-->
    </style>

</resources>